rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // FAQ collection - read only for all users
    match /faqs/{document} {
      allow read: if true;
      allow write: if false; // Admin only via Firebase Console
    }
    
    // QNA collection - allow read for all, write for authenticated users
    match /qna/{document} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        resource.data.author == request.auth.token.email;
    }
    
    // Answers subcollection
    match /qna/{questionId}/answers/{answerId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        resource.data.author == request.auth.token.email;
    }
    
    // Garmin products - read only
    match /products/{document} {
      allow read: if true;
      allow write: if false; // Admin only
    }
    
    // User profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}